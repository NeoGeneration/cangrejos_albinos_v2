# Protect sensitive files
<FilesMatch "^(db_config\.php|configuration\.php|\.)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Security Headers
<IfModule mod_headers.c>
    # Protect against XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Enable browser XSS filters
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Set Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://code.jquery.com https://cdn.jsdelivr.net https://stackpath.bootstrapcdn.com https://cdnjs.cloudflare.com https://player.vimeo.com https://f.vimeocdn.com 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://stackpath.bootstrapcdn.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data: https://i.vimeocdn.com; connect-src 'self' https://player.vimeo.com; object-src 'none'; frame-src 'self' https://player.vimeo.com"
    
    # Set Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Enable rewriting engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect to HTTPS (uncomment in production)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Set upload limits for PHP
    <IfModule mod_php.c>
        php_value upload_max_filesize 2M
        php_value post_max_size 8M
        php_value max_execution_time 30
        php_value max_input_time 60
    </IfModule>
</IfModule>

# MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
</IfModule>

# Block access to sensitive directories
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [R=403,L]
</IfModule>

# Prevent script execution in uploads directory (if you have one)
<IfModule mod_rewrite.c>
    RewriteRule ^uploads/.*\.(php|phtml|php3|php4|php5|php7|phps)$ - [NC,F]
</IfModule>